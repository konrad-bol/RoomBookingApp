@{
    ViewData["Title"] = "Logowanie";
}

<h2>Zaloguj się</h2>

<form method="post">
    <div>
        <label>Email</label>
        <input type="email" name="email" required />
    </div>
    <div>
        <label>Hasło</label>
        <input type="password" name="password" required />
    </div>
    <button type="submit">Zaloguj</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
